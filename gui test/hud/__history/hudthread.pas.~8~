unit hudthread;

interface

uses
  Windows, Messages, SysUtils, Variants, Classes, Graphics, Controls, Forms,
  Dialogs, StdCtrls, Memory, guiclass, inputer, addresses, lua, lualib,
  Menus, settingsXML, luaClass, Vcl.ExtCtrls;

type
  THudThread = class(TThread)
  protected
    procedure Execute; override;
  end;

implementation

uses
  unit1, unitLoadDLL;

procedure THudThread.Execute;
var
  h: integer;
begin

  sleep(1000);
  showme();

  sleep(1000);
  h := gethandle();

  ShowWindow(h, SW_HIDE);
  SetWindowLong(h, GWL_EXSTYLE, GetWindowLong(h, GWL_EXSTYLE) or WS_EX_TRANSPARENT or WS_EX_TOPMOST or WS_EX_TOOLWINDOW); //WS_EX_TOOLWINDOW
  ShowWindow(h, SW_SHOW);
  //
end;


end.
